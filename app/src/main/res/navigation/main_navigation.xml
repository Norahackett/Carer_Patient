<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/reportFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="ie.wit.carerpatient.ui.settings.SettingsFragment"
        android:label="@string/settings" />


    <fragment
        android:id="@+id/medicineFragment"
        android:name="ie.wit.carerpatient.ui.medicine.MedicineFragment"
        android:label="@string/action_medicine"
        tools:layout="@layout/fragment_medicine" >
        <action
            android:id="@+id/action_medicineFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>



    <fragment
        android:id="@+id/reportFragment"
        android:name="ie.wit.carerpatient.ui.report.ReportFragment"
        android:label="@string/action_report"
        tools:layout="@layout/fragment_report" >
        <action
            android:id="@+id/action_reportFragment_to_medicineFragment"
            app:destination="@id/medicineFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_reportFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />
    </fragment>





    <fragment
        android:id="@+id/aboutFragment"
        android:name="ie.wit.carerpatient.ui.about.AboutFragment"
        android:label="@string/action_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/DetailFragment"
        android:name="ie.wit.carerpatient.ui.detail.DetailFragment"
        android:label="Medicine Details"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_DetailFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <argument
            android:name="medicineid"
            app:argType="string" />
    </fragment>




    <fragment
        android:id="@+id/ProfileFragment"
        android:name="ie.wit.carerpatient.ui.profile.ProfileFragment"
        android:label="Profile Details"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_ProfileFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>


    </fragment>




    <fragment
        android:id="@+id/RegisterFragment"
        android:name="ie.wit.carerpatient.ui.auth.Register"
        android:label="Register Details"
        tools:layout="@layout/fragment_register">
    <action
        android:id="@+id/action_ProfileFragment_to_reportFragment"
        app:destination="@id/reportFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>


    </navigation>

